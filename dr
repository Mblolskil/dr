<script>
    function showLetter() {
        document.querySelector('.heart').style.display = 'none';
        document.querySelector('.click-text').style.display = 'none';
        document.getElementById('letter').classList.add('active');
        document.getElementById('giftBox').classList.add('active');
        createConfetti();
    }

    function closeLetter() {
        document.getElementById('letter').classList.remove('active');
        document.querySelector('.heart').style.display = 'block';
        document.querySelector('.click-text').style.display = 'block';
    }

    function createConfetti() {
        const colors = ['#ff6b81', '#ffa502', '#2ed573', '#1e90ff', '#ff4757'];
        for(let i = 0; i < 150; i++) {
            const confetti = document.createElement('div');
            confetti.style.position = 'fixed';
            confetti.style.width = '12px';
            confetti.style.height = '12px';
            confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.top = '-20px';
            confetti.style.borderRadius = '50%';
            confetti.style.zIndex = '999';
            confetti.style.opacity = '0.8';
            document.body.appendChild(confetti);

            confetti.animate([
                {
                    transform: `translate(${Math.random() * 100 - 50}px, 0) rotate(0deg)`,
                    opacity: 1
                },
                {
                    transform: `translate(${Math.random() * 100 - 50}px, ${window.innerHeight + 100}px) rotate(${360 * 3}deg)`,
                    opacity: 0
                }
            ], {
                duration: 3000 + Math.random() * 2000,
                easing: 'cubic-bezier(.1,.7,.4,1)'
            }).onfinish = () => confetti.remove();
        }
    }
</script>
